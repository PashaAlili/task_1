<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraintTop"
        >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Create\nyour account"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="93dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraintInputText"
        app:layout_constraintTop_toBottomOf="@id/constraintTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#33C4C4C4"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/inputLayoutEnterName"
            android:hint="Enter your name"
            android:textColorHint="#bcbcbc"
            app:boxStrokeWidth="0dp"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/viewEnterName"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEnterName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#33C4C4C4"
            app:layout_constraintTop_toBottomOf="@id/viewEnterName"
            android:id="@+id/inputLayoutEmailAdress"
            android:hint="Email Adress"
            android:textColorHint="#bcbcbc"
            app:boxStrokeWidth="0dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"/>
            
        </com.google.android.material.textfield.TextInputLayout>
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/viewEmailAdress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEmailAdress"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#bbbbbb"
            />
        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#33C4C4C4"
            app:layout_constraintTop_toBottomOf="@id/viewEmailAdress"
            android:id="@+id/inputLayoutPassword"
            android:hint="Password"
            android:textColorHint="#bcbcbc"
            app:boxStrokeWidth="0dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/viewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutPassword"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#bbbbbb"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#33C4C4C4"
            app:layout_constraintTop_toBottomOf="@id/viewPassword"
            android:id="@+id/inputLayoutConfirmPassword"
            android:hint="Confirm Password"
            android:textColorHint="#bcbcbc"
            app:boxStrokeWidth="0dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/viewConfirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutConfirmPassword"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#bbbbbb"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraintBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintInputText"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPanel"
            android:layout_width="147dp"
            android:layout_height="51dp"
            android:text="SIGN UP"
            android:backgroundTint="#2D201C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="114dp"
            android:layout_marginTop="44dp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/textSingup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or sign up with"
            android:textColor="#787777"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonPanel"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            />

        <Button
            android:id="@+id/buttonApple"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:drawableBottom="@drawable/icon_apple"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSingup"
            android:layout_marginStart="120dp"
            android:layout_marginTop="28dp"
            />

        <Button
            android:id="@+id/buttonGmail"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/icon_gmail"
            app:layout_constraintStart_toEndOf="@id/buttonApple"
            app:layout_constraintTop_toBottomOf="@id/textSingup"
            android:layout_marginTop="28dp"
            android:layout_marginStart="20dp"
            />

        <Button
            android:id="@+id/buttonFace"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:drawableBottom="@drawable/icon_facebook"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/buttonGmail"
            app:layout_constraintTop_toBottomOf="@id/textSingup"
            android:layout_marginTop="28dp"
            android:layout_marginStart="20dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraintLast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/textAlreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Log In"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/textAlreadyHaveAccount"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp"
            android:textAlignment="textStart"
            android:paddingLeft="10dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>