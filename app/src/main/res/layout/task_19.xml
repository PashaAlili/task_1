<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/cons1"
        android:minHeight="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/imageview1"
            android:src="@drawable/devian_art_website_favicon_color_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textone"
            android:text="Unleash your creativity and let your artistic vision soar."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/imageview1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/texttwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Unleash the Magic of Creation!"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/textone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="40dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cons1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cons2"
        android:paddingTop="35dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="#3A5998"
            android:text="SIGN UP WITH FACEBOOK"
            android:textSize="13sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/facebook"
            app:iconSize="20dp"
            android:layout_marginHorizontal="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="#228812"
            app:icon="@drawable/mailicon1"
            android:text="SIGN UP WITH EMAIL"
            app:iconSize="20dp"
            android:textSize="13sp"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="60dp"
            app:layout_constraintTop_toBottomOf="@id/button1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/cons3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="45dp"
        tools:ignore="NotSibling">

            <TextView
                android:id="@+id/textname1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Already have an account?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/textname2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Log in"
                android:textColor="#00B5EE"
                android:textSize="16sp"
                android:textStyle="italic"

                app:layout_constraintStart_toEndOf="@id/textname1"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>











</androidx.constraintlayout.widget.ConstraintLayout>

